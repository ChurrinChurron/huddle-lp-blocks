---
const {imgSrc, imgAlt, isSecondaryDiv, title, desc} = Astro.props
import { Image } from "astro:assets";
---

<div class={`flex flex-col items-center shadow-md shadow-slate-200 rounded-2xl px-8 py-12 bg-white ${isSecondaryDiv ? `md:flex-row` : `md:flex-row-reverse`} md:justify-between md:gap-x-20 md:pl-20 md:pr-8 md:py-16 lg:max-w-[70em] lg:gap-x-44 lg:pl-28`}>
    <Image 
        src={imgSrc}
        alt={imgAlt}
        class="md:w-72 lg:w-[23em]"
        width={250}
        height={180}
    />
    <div class="mt-16 md:mt-0">
        <h3 class="text-center text-2xl font-openSansB md:text-left lg:text-[1.6em]">{title}</h3>
        <p class="mt-5 text-slate-400 text-center md:text-left">{desc}</p>
    </div>
</div>